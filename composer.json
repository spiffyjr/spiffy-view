{
    "name": "spiffy/spiffy-view",
    "authors": [
        {
            "name": "Kyle Spraggs",
            "email": "theman@spiffyjr.me"
        }
    ],
    "description": "Spiffy\\View is a light-weight, HHVM compatible, and dependency free view compatability layer. It does not provide its own templating system!",
    "license": "BSD-3-Clause",
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "~1.0"
    },
    "suggest": {
        "spiffy-view-twig": "for a Twig compatability layer"
    },
    "autoload": {
        "psr-4": {
            "Spiffy\\View\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "1.0-dev"
        }
    }
}
